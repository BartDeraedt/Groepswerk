<Window x:Class="test_tv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_tv" 
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Image Source= "/images/tv.jpg" Stretch="Fill" />
        <TextBlock x:Name="txtblockChannelnr" HorizontalAlignment="Left" Margin="625,66,0,0" Text="{Binding Path=Channel,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="80"/>
        <Button x:Name="btnPower" Content="POWER" HorizontalAlignment="Left" Background="#FFDDDDDD" Margin="66,412,0,0" VerticalAlignment="Top" Click="btnPower_Click"/>
        <TextBlock x:Name="txtblockVolume" HorizontalAlignment="Left" Margin="625,96,0,0" Text="{Binding Volume,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="80"/>
        <Button x:Name="btnVolup" Content="+" HorizontalAlignment="Left" Margin="129,416,0,0" VerticalAlignment="Top" Click="TV_Button_Click"/>
        <Button x:Name="btnVoldown" Content="-" HorizontalAlignment="Left" Margin="129,436,0,0" VerticalAlignment="Top" Click="TV_Button_Click" Width="12"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,405,0,0" Text="VOL" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="8"/>
        <Button x:Name="btnProgup" Content="^" HorizontalAlignment="Left" Margin="149,416,0,0" VerticalAlignment="Top" Click="TV_Button_Click"/>
        <Button x:Name="btnProgdown" Content="v" HorizontalAlignment="Left" Margin="149,436,0,0" VerticalAlignment="Top" Click="TV_Button_Click" Width="12"/>
        <TextBlock HorizontalAlignment="Left" Margin="147,405,0,0" Text="PROG" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="8"/>
        <Button x:Name="btnSource" Content="SOURCE" HorizontalAlignment="Left" Background="#FFDDDDDD" Margin="66,437,0,0" VerticalAlignment="Top" Click="btnSource_Click" Width="44" FontSize="11"/>
        <TextBox x:Name="txtStartupchannel" MaxLength="3" HorizontalAlignment="Left" Margin="225,126,0,0" Text="1" BorderThickness="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="43" Visibility="Collapsed" PreviewTextInput="txtStartupchannel_PreviewTextInput"/>
        <Label x:Name="labstartupchannel" Content="StartupChannel" HorizontalAlignment="Left" Margin="129,121,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>
        <Button x:Name="btnSettings" Content="SETTINGS" HorizontalAlignment="Left" Background="#FFDDDDDD" Margin="13,437,0,0" VerticalAlignment="Top" Click="btnSettings_Click" Width="48" FontSize="10" Height="19"/>
        <CheckBox x:Name="ChkboxUse" Content="Use startup settings" HorizontalAlignment="Left" Margin="143,109,0,0" VerticalAlignment="Top" Visibility="Collapsed" Checked="ChkboxUse_Checked" Unchecked="ChkboxUse_Unchecked"/>
        <Label x:Name="labstartupvolume"  Content="StartupVolume"   HorizontalAlignment="Left" Margin="129,147,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>
        <TextBox x:Name="txtStartupvolume" MaxLength="2" HorizontalAlignment="Left" Margin="225,150,0,0" Text="20" BorderThickness="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="43" Visibility="Collapsed"/>
        <ComboBox x:Name="ComboboxSource" SelectedIndex="0" HorizontalAlignment="Left"  Margin="225,175,0,0" VerticalAlignment="Top" Visibility="Collapsed" Width="71">
            <ComboBoxItem Content="TV"/>
            <ComboBoxItem Content="HDMI1"/>
            <ComboBoxItem Content="HDMI2"/>
        </ComboBox>
        <Label x:Name="labstartupsource" Content="StartupSource"   HorizontalAlignment="Left" Margin="129,171,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>
</Window>
