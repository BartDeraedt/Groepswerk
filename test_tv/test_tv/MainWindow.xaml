<Window x:Class="test_tv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_tv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txtblockChannelnr" HorizontalAlignment="Left" Margin="651,30,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="80"/>
        <Button x:Name="btnPower" Content="POWER" HorizontalAlignment="Left" Background="#FFDDDDDD" Margin="33,364,0,0" VerticalAlignment="Top" Click="btnPower_Click"/>
        <TextBlock x:Name="txtblockVolume" HorizontalAlignment="Left" Margin="651,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="80"/>
        <Button x:Name="btnVolup" Content="+" HorizontalAlignment="Left" Margin="96,364,0,0" VerticalAlignment="Top" Click="TV_Button_Click"/>
        <Button x:Name="btnVoldown" Content="-" HorizontalAlignment="Left" Margin="96,384,0,0" VerticalAlignment="Top" Click="TV_Button_Click" Width="12"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,353,0,0" Text="VOL" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="8"/>
        <Button x:Name="btnProgup" Content="^" HorizontalAlignment="Left" Margin="116,364,0,0" VerticalAlignment="Top" Click="TV_Button_Click"/>
        <Button x:Name="btnProgdown" Content="v" HorizontalAlignment="Left" Margin="116,384,0,0" VerticalAlignment="Top" Click="TV_Button_Click" Width="12"/>
        <TextBlock HorizontalAlignment="Left" Margin="114,353,0,0" Text="PROG" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="8"/>
    </Grid>
</Window>
